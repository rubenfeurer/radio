FROM python:3.9-slim

WORKDIR /app

# Install essential build and test dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    wget \
    unzip \
    git \
    systemd \
    dbus \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy all files
COPY . .

# Set execute permissions
RUN chmod +x install/install.sh \
    && chmod +x scripts/*.sh 2>/dev/null || true \
    && chmod +x manage_radio.sh 2>/dev/null || true

# Mock systemd and hardware services for testing
ENV MOCK_SERVICES=true
ENV SKIP_HARDWARE=1
ENV SKIP_NETWORK_SETUP=1
ENV SKIP_PIGPIO=1
ENV DEV_MODE=true

# Install pigpio from source before running install script
RUN wget https://github.com/joan2937/pigpio/archive/master.zip \
    && unzip master.zip \
    && cd pigpio-master \
    && make \
    && make install \
    && cd .. \
    && rm -rf master.zip pigpio-master \
    && ldconfig

# Run install script with test flags
ENV SKIP_PIGPIO=1
RUN ./install/install.sh --test

# Run tests
CMD ["bash", "-c", "systemctl start radio && journalctl -u radio -f"]
