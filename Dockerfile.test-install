FROM python:3.9-slim

WORKDIR /app

# Install only minimal build essentials
RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy all files
COPY . .

# Run install script (which handles dependencies)
RUN bash install/install.sh

# Run tests
CMD ["bash", "scripts/test_install.sh"]
