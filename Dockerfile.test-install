FROM python:3.9-slim

WORKDIR /app

# Install essential build and test dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    wget \
    unzip \
    git \
    systemd \
    dbus \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy all files
COPY . .

# Set execute permissions
RUN chmod +x install/install.sh \
    && chmod +x scripts/*.sh 2>/dev/null || true \
    && chmod +x manage_radio.sh 2>/dev/null || true

# Set environment variables for testing
ENV MOCK_SERVICES=true \
    SKIP_HARDWARE=1 \
    SKIP_NETWORK_SETUP=1 \
    SKIP_PIGPIO=1 \
    DEV_MODE=true \
    TEST_MODE=1

# Run install script with test flags
RUN SKIP_PIGPIO=1 TEST_MODE=1 ./install/install.sh --test

# Run tests
CMD ["bash", "-c", "systemctl start radio && journalctl -u radio -f"]
