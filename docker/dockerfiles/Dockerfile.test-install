FROM arm32v7/debian:bullseye-slim

# Mock Raspberry Pi environment
RUN apt-get update && apt-get install -y \
    systemd \
    python3 \
    python3-pip \
    python3-venv \
    && rm -rf /var/lib/apt/lists/*

# Mock hardware and system files
RUN mkdir -p /dev/gpiomem && \
    mkdir -p /run/pigpio && \
    touch /run/pigpio/pigpio.pid

WORKDIR /app

# Copy project files
COPY . .

# Create test script
COPY scripts/test_installation.sh /test.sh
RUN chmod +x /test.sh

CMD ["/test.sh"] 